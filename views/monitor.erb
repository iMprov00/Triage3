<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Монитор пациентов</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <style>
    body { 
      padding: 20px; 
      background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
      color: #fff; 
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
    }
    
    .patient-card { 
      background: linear-gradient(145deg, #0d1117, #161b22); 
      border: 3px solid #30363d; 
      border-radius: 20px; 
      margin: 15px; 
      padding: 25px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.7);
      transition: all 0.3s ease;
      height: 100%;
    }
    
    .patient-card:hover { 
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(0,0,0,0.9);
      border-color: #58a6ff;
    }
    
    .priority-red {
      border-left: 8px solid #dc3545;
      background: linear-gradient(145deg, #220b0d, #1a080a);
    }
    
    .priority-yellow {
      border-left: 8px solid #ffc107;
      background: linear-gradient(145deg, #221b0d, #1a170a);
      color: #ffd700;
    }
    
    .priority-purple {
      border-left: 8px solid #6f42c1;
      background: linear-gradient(145deg, #180d22, #130a1a);
      color: #c19fff;
    }
    
    .priority-green {
      border-left: 8px solid #198754;
      background: linear-gradient(145deg, #0d220f, #0a1a0c);
      color: #90ee90;
    }
    
    .timer-box {
      padding: 20px;
      border-radius: 15px;
      font-weight: bold;
      text-align: center;
      font-size: 2.5rem;
      margin: 10px 0;
      background: linear-gradient(45deg, #1a1a1a, #2d2d2d);
      border: 2px solid #444;
    }
    
    .timer-critical { 
      background: linear-gradient(45deg, #8b0000, #dc3545) !important;
      animation: pulse 1s infinite !important;
      color: white !important;
      border-color: #ff4444 !important;
    }
    
    .timer-warning { 
      background: linear-gradient(45deg, #b8860b, #ffc107) !important;
      color: #000 !important;
      border-color: #ffaa00 !important;
    }
    
    .timer-normal { 
      background: linear-gradient(45deg, #005b20, #198754) !important;
      color: white !important;
      border-color: #00cc66 !important;
    }
    
    .timer-expired {
      background: linear-gradient(45deg, #333, #555) !important;
      color: #aaa !important;
      border-color: #666 !important;
    }
    
    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.05); }
      100% { transform: scale(1); }
    }
    
    @keyframes blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    
    .header {
      background: rgba(13, 17, 23, 0.9);
      padding: 25px;
      border-radius: 20px;
      margin-bottom: 30px;
      border: 2px solid #30363d;
      box-shadow: 0 5px 15px rgba(0,0,0,0.5);
    }
    
    .display-1 {
      font-size: 4rem;
      font-weight: 800;
      background: linear-gradient(90deg, #58a6ff, #bc8cff);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      text-shadow: 0 0 20px rgba(88, 166, 255, 0.3);
    }
    
    .step-badge {
      font-size: 0.9rem;
      padding: 5px 15px;
      border-radius: 20px;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .step-1 { background: linear-gradient(45deg, #007bff, #0056b3); }
    .step-2 { background: linear-gradient(45deg, #fd7e14, #e8590c); }
    .step-3 { background: linear-gradient(45deg, #20c997, #0ca678); }
    
    .progress {
      height: 12px;
      background-color: #2d333b;
      border-radius: 10px;
      overflow: hidden;
    }
    
    .progress-bar {
      transition: width 1s ease;
    }
    
    .patient-name {
      font-size: 1.8rem;
      font-weight: 600;
      color: #c9d1d9;
      margin-bottom: 10px;
    }
    
    .patient-info {
      color: #8b949e;
      font-size: 1.1rem;
      line-height: 1.5;
    }
    
    .info-row {
      padding: 8px 0;
      border-bottom: 1px solid #30363d;
    }
    
    .info-row:last-child {
      border-bottom: none;
    }
    
    .icon-col {
      width: 40px;
      text-align: center;
      color: #58a6ff;
    }
    
    /* Адаптивность */
    @media (max-width: 1200px) {
      .display-1 { font-size: 3rem; }
      .timer-box { font-size: 2rem; }
    }
    
    @media (max-width: 768px) {
      .display-1 { font-size: 2.5rem; }
      .patient-name { font-size: 1.5rem; }
      .patient-card { padding: 15px; margin: 10px; }
      .timer-box { font-size: 1.8rem; padding: 15px; }
    }
    
    .status-indicator {
      width: 15px;
      height: 15px;
      border-radius: 50%;
      display: inline-block;
      margin-right: 8px;
    }
    
    .status-active { background-color: #00ff00; box-shadow: 0 0 10px #00ff00; }
    .status-warning { background-color: #ff9900; box-shadow: 0 0 10px #ff9900; }
    .status-critical { background-color: #ff0000; box-shadow: 0 0 10px #ff0000; animation: blink 1s infinite; }
    .status-inactive { background-color: #666; }
    
    .scroll-container {
      max-height: calc(100vh - 200px);
      overflow-y: auto;
      padding-right: 5px;
    }
    
    .scroll-container::-webkit-scrollbar {
      width: 8px;
    }
    
    .scroll-container::-webkit-scrollbar-track {
      background: #1a1a1a;
      border-radius: 4px;
    }
    
    .scroll-container::-webkit-scrollbar-thumb {
      background: #58a6ff;
      border-radius: 4px;
    }
    
    .scroll-container::-webkit-scrollbar-thumb:hover {
      background: #3d8bf7;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="header">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="display-1 mb-3">
            <i class="bi bi-heart-pulse"></i> МОНИТОР ТРИАЖА
          </h1>
          <div class="d-flex flex-wrap align-items-center gap-3">
            <div class="text-info fs-5">
              <i class="bi bi-clock"></i>
              <span id="current-time"><%= Time.now.strftime("%d.%m.%Y %H:%M:%S") %></span>
            </div>
            <div class="text-warning fs-5">
              <i class="bi bi-person-fill"></i>
              Активных пациентов: <span id="patient-count" class="fw-bold">0</span>
            </div>
            <div class="text-success fs-5">
              <i class="bi bi-speedometer2"></i>
              Обновление: <span id="refresh-rate">2</span> сек
            </div>
          </div>
        </div>
        <div class="col-md-4 text-end">
          <div class="alert alert-dark d-inline-block mb-0">
            <div class="d-flex align-items-center">
              <span class="status-indicator status-active"></span>
              <span class="ms-2">Система активна</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Легенда приоритетов -->
      <div class="row mt-4">
        <div class="col-12">
          <div class="d-flex flex-wrap gap-3 justify-content-center">
            <div class="d-flex align-items-center">
              <div class="status-indicator status-critical"></div>
              <span class="ms-2 text-danger">Красный (≤ 8 баллов)</span>
            </div>
            <div class="d-flex align-items-center">
              <div class="status-indicator status-warning"></div>
              <span class="ms-2 text-warning">Желтый (неотложность)</span>
            </div>
            <div class="d-flex align-items-center">
              <div style="background-color: #6f42c1; box-shadow: 0 0 10px #6f42c1;" class="status-indicator"></div>
              <span class="ms-2" style="color: #bc8cff;">Фиолетовый (инфекция)</span>
            </div>
            <div class="d-flex align-items-center">
              <div class="status-indicator status-active"></div>
              <span class="ms-2 text-success">Зеленый (стабильный)</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div id="patients-container" class="row scroll-container">
      <div class="col-12 text-center">
        <div class="alert alert-dark" style="background: rgba(33,37,41,0.9);">
          <h3><i class="bi bi-hourglass-split"></i> Загрузка данных...</h3>
          <div class="spinner-border text-primary mt-3" role="status">
            <span class="visually-hidden">Загрузка...</span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="text-center mt-5 text-muted">
      <small><i class="bi bi-shield-check"></i> Система триажа • Версия 2.0 • Автоматическое обновление</small>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script>
  // Функция обновления монитора
  function updateMonitor() {
    $.ajax({
      url: '/api/active_patients',
      type: 'GET',
      dataType: 'json',
      success: function(patients) {
        const container = $('#patients-container');
        const countElement = $('#patient-count');
        
        countElement.text(patients.length);
        
        if (patients.length === 0) {
          container.html(`
            <div class="col-12 text-center">
              <div class="alert alert-dark" style="background: rgba(33,37,41,0.9);">
                <h2><i class="bi bi-info-circle"></i> НЕТ АКТИВНЫХ ПАЦИЕНТОВ</h2>
                <p class="mb-0 fs-5">В данный момент нет пациентов, проходящих триаж</p>
              </div>
            </div>
          `);
          return;
        }
        
        let html = '';
        
        // Сортируем пациентов: сначала критические, затем по оставшемуся времени
        patients.sort((a, b) => {
          // Сначала по приоритету
          const priorityOrder = { 'red': 1, 'yellow': 2, 'purple': 3, 'green': 4 };
          if (a.priority !== b.priority) {
            return priorityOrder[a.priority] - priorityOrder[b.priority];
          }
          // Затем по времени (меньше времени - выше)
          return a.time_remaining - b.time_remaining;
        });
        
        patients.forEach(patient => {
          // Определяем класс таймера
          let timerClass = 'timer-normal';
          let timeText = patient.time_remaining;
          let timerStatus = 'status-active';
          
          if (patient.time_remaining <= 0) {
            timerClass = 'timer-expired';
            timeText = 'ВРЕМЯ ВЫШЛО';
            timerStatus = 'status-inactive';
          } else if (patient.time_remaining <= 30) {
            timerClass = 'timer-critical';
            timerStatus = 'status-critical';
          } else if (patient.time_remaining <= 60) {
            timerClass = 'timer-warning';
            timerStatus = 'status-warning';
          }
          
          // Определяем класс приоритета
          let priorityClass = '';
          let priorityText = '';
          let priorityIcon = '';
          
          switch(patient.priority) {
            case 'red':
              priorityClass = 'priority-red';
              priorityText = 'КРАСНЫЙ';
              priorityIcon = '<i class="bi bi-exclamation-triangle-fill text-danger"></i>';
              break;
            case 'yellow':
              priorityClass = 'priority-yellow';
              priorityText = 'ЖЕЛТЫЙ';
              priorityIcon = '<i class="bi bi-exclamation-circle-fill text-warning"></i>';
              break;
            case 'purple':
              priorityClass = 'priority-purple';
              priorityText = 'ФИОЛЕТОВЫЙ';
              priorityIcon = '<i class="bi bi-info-circle-fill" style="color: #bc8cff;"></i>';
              break;
            case 'green':
              priorityClass = 'priority-green';
              priorityText = 'ЗЕЛЕНЫЙ';
              priorityIcon = '<i class="bi bi-check-circle-fill text-success"></i>';
              break;
            default:
              priorityClass = '';
              priorityText = 'ОЦЕНКА';
              priorityIcon = '<i class="bi bi-hourglass-split text-info"></i>';
          }
          
          // Определяем прогресс для этапа
          let progressPercent = 0;
          let maxTime = 120; // По умолчанию для этапа 1
          if (patient.step === 2) maxTime = 300; // 5 минут
          if (patient.step === 3) maxTime = 600; // 10 минут
          
          progressPercent = Math.max(0, Math.min(100, (patient.time_remaining / maxTime) * 100));
          
          // Определяем цвет прогресса
          let progressColor = 'bg-success';
          if (progressPercent <= 25) progressColor = 'bg-danger';
          else if (progressPercent <= 50) progressColor = 'bg-warning';
          
          html += `
            <div class="col-xl-4 col-lg-6 col-md-12">
              <div class="patient-card ${priorityClass}">
                <div class="row">
                  <div class="col-8">
                    <div class="patient-name">
                      ${patient.full_name}
                      <span class="badge bg-dark ms-2">ID: ${patient.id}</span>
                    </div>
                    
                    <div class="patient-info">
                      <div class="info-row d-flex">
                        <div class="icon-col">
                          <i class="bi bi-person-badge"></i>
                        </div>
                        <div class="flex-grow-1">
                          <strong>Исполнитель:</strong> ${patient.performer_name}
                        </div>
                      </div>
                      
                      <div class="info-row d-flex">
                        <div class="icon-col">
                          <i class="bi bi-clipboard2-pulse"></i>
                        </div>
                        <div class="flex-grow-1">
                          <strong>Этап:</strong> 
                          <span class="step-badge step-${patient.step}">${patient.step_name}</span>
                        </div>
                      </div>
                      
                      <div class="info-row d-flex">
                        <div class="icon-col">
                          ${priorityIcon}
                        </div>
                        <div class="flex-grow-1">
                          <strong>Приоритет:</strong> 
                          <span class="badge ${priorityClass.replace('priority-', 'bg-') || 'bg-secondary'}">
                            ${priorityText}
                          </span>
                        </div>
                      </div>
                      
                      <div class="info-row d-flex">
                        <div class="icon-col">
                          <i class="bi bi-heart-pulse"></i>
                        </div>
                        <div class="flex-grow-1">
                          <strong>Баллы сознания:</strong> 
                          <span class="${patient.consciousness_score <= 8 ? 'text-danger fw-bold' : 'text-success'}">
                            ${patient.consciousness_score || 0}/15
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="col-4">
                    <div class="timer-box ${timerClass}">
                      <div class="d-flex align-items-center justify-content-center">
                        <span class="status-indicator ${timerStatus} me-2"></span>
                        <div>
                          <div class="display-4 fw-bold">${timeText}</div>
                          <small class="opacity-75">секунд</small>
                        </div>
                      </div>
                    </div>
                    
                    <div class="text-center mt-3">
                      <div class="small text-muted mb-2">Прогресс этапа</div>
                      <div class="progress">
                        <div class="progress-bar ${progressColor}" 
                             role="progressbar" 
                             style="width: ${100 - progressPercent}%">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Дополнительная информация -->
                <div class="row mt-3 pt-3 border-top border-secondary">
                  <div class="col-12">
                    <div class="row small text-center">
                      <div class="col-4">
                        <div><i class="bi bi-eye"></i></div>
                        <div class="opacity-75">${patient.eye_opening_score || 0}/4</div>
                      </div>
                      <div class="col-4">
                        <div><i class="bi bi-chat-dots"></i></div>
                        <div class="opacity-75">${patient.verbal_score || 0}/4</div>
                      </div>
                      <div class="col-4">
                        <div><i class="bi bi-activity"></i></div>
                        <div class="opacity-75">${patient.motor_score || 0}/6</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          `;
        });
        
        container.html(html);
      },
      error: function(xhr, status, error) {
        console.error('Ошибка загрузки данных:', error);
        $('#patients-container').html(`
          <div class="col-12 text-center">
            <div class="alert alert-danger">
              <h3><i class="bi bi-exclamation-triangle"></i> Ошибка загрузки данных</h3>
              <p>Пожалуйста, проверьте соединение и обновите страницу</p>
              <button class="btn btn-warning mt-2" onclick="updateMonitor()">
                <i class="bi bi-arrow-clockwise"></i> Повторить
              </button>
            </div>
          </div>
        `);
      }
    });
  }
  
  // Обновляем монитор каждые 2 секунды
  setInterval(updateMonitor, 2000);
  
  // Первый запуск
  updateMonitor();
  
  // Обновляем время каждую секунду
  function updateCurrentTime() {
    const now = new Date();
    const timeString = now.toLocaleDateString('ru-RU') + ' ' + 
                      now.toLocaleTimeString('ru-RU', { 
                        hour: '2-digit', 
                        minute: '2-digit', 
                        second: '2-digit' 
                      });
    $('#current-time').text(timeString);
  }
  
  setInterval(updateCurrentTime, 1000);
  
  // Обновляем счетчик частоты обновления
  let refreshRate = 2;
  setInterval(() => {
    $('#refresh-rate').text(refreshRate);
  }, 1000);
  
  // Автоматическое обновление при фокусе на вкладке
  $(window).on('focus', function() {
    updateMonitor();
  });
  </script>
</body>
</html>